<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_select_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Select Category"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_selected_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="selected category is "
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_select_city"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Select City"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_selected_city"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="selected city is "
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_select_doctor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Select Doctor"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_selected_doctor"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="selected doctor is "
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Select Date"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_selected_date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="selected date is "
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_select_hour"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Select Hour"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_selected_hour"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="selected hour is "
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_save_hour"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Save Consultation"
        android:background="@color/blue"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:textColor="@color/white"/>
</LinearLayout>